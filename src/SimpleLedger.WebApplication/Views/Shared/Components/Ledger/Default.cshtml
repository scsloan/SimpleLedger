@model SimpleLedger.Domain.Entities.Ledger


<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Payee</th>
            <th>Category</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.Transactions)
        {
            <tr>
                <td>@entry.Date.ToString("MM/dd/yyyy")</td>
                <td>@entry.Payee</td>
                <td>@entry.Category</td>
                <td>@entry.Amount.ToString("C")</td>
                <td></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end"><strong>Total:</strong></td>
            <td>@Model.Balance.ToString("C")</td>
            <td></td>
        </tr>
    </tfoot>
</table>
