@model List<KeyValuePair<string, decimal>>

<div class="card">
    <div class="card-header">
        <h2>Totals By Category</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <th>Category</th>
                        <th>Total</th>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model)
                        {
                            <tr>
                                <td>@entry.Key</td>
                                <td>@entry.Value.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

